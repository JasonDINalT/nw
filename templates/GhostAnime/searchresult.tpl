[searchposts]
[fullresult]
<div class="story shortstory">
  <div class="storin">
    <div class="dtop">
      <h2>[full-link]{title}[/full-link]</h2>
      <div class="stinfo">
        <span class="acoms">[com-link]<b>{comments-num}</b>[/com-link]</span>
        [rating]<div class="rate">{rating}</div>[/rating]
        <ul class="ihmenu">
          <li><span class="adate">[day-news]{date}[/day-news]</span></li>
          <li><span class="auser">{author}</span></li>
          <li><span class="aviews">{views}</span></li>
        </ul>
      </div>
    </div>
    <div class="dcont">
	  {short-story}
      <div class="clr"></div>
	</div>
  </div>
  <div class="dbtm">
    <span class="argmore">[full-link]Подробнее[/full-link]</span>
  [not-group=5]
    <span class="isicons">
      <b>{favorites}</b>
      <b>[edit]<img src="{THEME}/dleimages/editstore.png" title="Редактировать" alt="Редактировать" />[/edit]</b>
    </span>
  [/not-group]
    <p class="argcat">Категория: {link-category}</p>
  </div>
</div>
[/fullresult]
